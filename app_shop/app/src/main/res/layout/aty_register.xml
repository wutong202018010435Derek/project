<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <com.lynn.base.view.AppTitleLayout
        android:id="@+id/backTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Register">

    </com.lynn.base.view.AppTitleLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">
        <!--android:digits="@string/name_digits"-->
        <EditText
            android:id="@+id/etName"
            style="@style/EditTextStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:background="@null"
            android:ems="10"
            android:hint="Please input phone number"
            android:inputType="phone"
            android:textColor="@color/text_color"
            android:textColorHint="@color/hint_color"
            android:textSize="18sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/background_color" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
        <!--register_phoneUser-false-start-->
        <LinearLayout
            android:id="@+id/llCode"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/etCode"
                style="@style/EditTextStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:background="@null"
                android:ems="10"
                android:hint="Please input code"
                android:inputType="number"
                android:textColor="@color/text_color"
                android:textColorHint="@color/hint_color"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvGetCode"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="24dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:text="SendCode"
                android:textColor="@color/tomato"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:background="@color/background_color" />
        <!--register_phoneUser-false-end-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/etPsw"
                style="@style/EditTextStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:background="@null"
                android:ems="6"
                android:hint="Please input password"
                android:inputType="textPassword"
                android:textColor="@color/text_color"
                android:textColorHint="@color/hint_color"
                android:textSize="18sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:background="@color/background_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/etConfirmPsw"
                style="@style/EditTextStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:background="@null"
                android:ems="6"
                android:hint="Please input password again"
                android:inputType="textPassword"
                android:textColor="@color/text_color"
                android:textColorHint="@color/hint_color"
                android:textSize="18sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:gravity="center|left"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Type:"/>

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:entries="@array/string_type"
                android:gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:spinnerMode="dropdown"/>


        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnRrgister"
        style="@style/register_button_style"
        android:text="Commint" />

</LinearLayout>