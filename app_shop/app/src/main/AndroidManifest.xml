<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.edu.squash">


    <uses-permission android:name="android.permission.INTERNET" />

    <!--允许获取粗略位置，若用GPS实现定位小蓝点功能则必选-->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <!--允许获取设备和运营商信息，用于问题排查和网络定位，若无gps但仍需实现定位小蓝点功能则此权限必选-->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <!--允许获取网络状态，用于网络定位，若无gps但仍需实现定位小蓝点功能则此权限必选-->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!--允许获取wifi网络信息，用于网络定位，若无gps但仍需实现定位小蓝点功能则此权限必选-->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <!--允许获取wifi状态改变，用于网络定位，若无gps但仍需实现定位小蓝点功能则此权限必选-->
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />



    <application
        android:name="com.edu.squash.app.MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/tubiao"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/networksecurityconfig"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">






        <activity android:name="com.edu.squash.ui.login.LoginAty">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>


        <activity android:name=".ui.me.AddAdressAty"/>
        <activity android:name=".ui.me.CollectActivity"/>


        <activity android:name="com.edu.squash.MainActivity" />

<!--        <activity android:name="com.edu.squash.ui.login.LoginAty"/>-->
        <activity android:name="com.edu.squash.ui.login.RegisterUserActivity"/>
        <activity android:name="com.edu.squash.ui.me.OrderActivity"/>

        <activity android:name="com.edu.squash.ui.me.VersionAty"/>

        <activity android:name=".ui.me.MyAdressAty"/>
        <activity android:name=".ui.me.SugesstionCommitActivity"/>

        <activity android:name=".ui.home.HotelListAty"/>
        <activity android:name=".ui.three.DetailActivity"/>
        <activity android:name=".ui.three.DynamicActivity"/>

        <activity android:name=".ui.home.LineAty"/>

        <activity android:name=".ui.three.CommitOrderActivity"/>
        <activity android:name=".ui.seller.SellerAty"/>
        <activity android:name=".ui.seller.GoodsMagerActivity"/>
        <activity android:name=".ui.seller.OrderMagerActivity"/>
        <activity android:name=".ui.seller.AddGoodsAty"/>
        <activity android:name=".ui.me.EvaluateCommitActivity"/>
        <activity android:name="com.lynn.base.img.ImgPickerActivity"/>



    </application>

</manifest>