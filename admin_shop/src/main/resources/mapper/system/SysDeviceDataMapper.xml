<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lynn.system.mapper.SysDeviceDataMapper">

	<resultMap type="SysDeviceData" id="SysDeviceResult">
		<id     property="sysId"     column="sys_id"     />
		<result property="deviceName"   column="device_name"   />
		<result property="deviceId"   column="device_id"   />
		<result property="deviceUser"     column="device_user"      />
		<result property="updateTime"   column="update_time"   />

	</resultMap>
	
	<sql id="selectDeviceVo">
        select sys_id, device_name, device_id, device_user, update_time
		from sys_device_data
    </sql>

	<select id="selectSysDeviceList" parameterType="SysDeviceData" resultMap="SysDeviceResult">
	    <include refid="selectDeviceVo"/>
		<where>
		    <if test="deviceId != null and deviceId != ''">
				AND device_id like concat('%', #{deviceId}, '%')
			</if>
			<if test="deviceUser != null and deviceUser != ''">
				AND device_user like concat('%', #{deviceUser}, '%')
			</if>

	    </where>
	</select>
	
	<select id="selectDataAll" resultMap="SysDeviceResult">
		<include refid="selectDeviceVo"/>
	</select>
	

	<delete id="deleteDeviceById" parameterType="Long">
 		delete from sys_device_data where sys_id = #{sysId}
 	</delete>


 	
 	<insert id="insertDataType" parameterType="SysDeviceData">
        insert into sys_device_data(
		<if test="sysId != null and sysId != ''">sys_id,</if>
        <if test="deviceName != null and deviceName != ''">device_name,</if>
        <if test="deviceId != null and deviceId != ''">device_id,</if>

        <if test="deviceUser != null and deviceUser != ''">device_user,</if>
		update_time
        )values(
        <if test="deviceName != null and deviceName != ''">#{deviceName},</if>
        <if test="deviceId != null and deviceId != ''">#{deviceId},</if>

        <if test="deviceUser != null ">#{deviceUser},</if>


        sysdate()
        )
    </insert>


	
</mapper> 